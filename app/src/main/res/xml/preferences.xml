<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:title="Host"
        android:key="host"
        android:summary="@string/settingsHostSummary"
        android:inputType="textUri|textNoSuggestions"
        android:hint="https://example.org/sholi/api.php"/>
    <CheckBoxPreference android:title="SSL"
        android:key="useSSL"
        android:summary="@string/settingsSslSummary" />

    <EditTextPreference android:title="Authentication"
        android:key="authkey"
        android:summary="@string/settingsAuthSummary"
        android:inputType="textPassword|textNoSuggestions"/>

</PreferenceScreen>